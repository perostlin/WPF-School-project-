<Window x:Class="WpfProject.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject"
        mc:Ignorable="d"
        Title="Registrera ny användare" Height="222.899" Width="236.232">
    <Grid>

        <StackPanel Margin="0,0,-0.2,0">

            <Label Content="Användarnamn (minst 3 bokstäver): *" Margin="10,10,0,0" FontSize="12" />
            <TextBox x:Name="tbUsername" HorizontalAlignment="Stretch" Margin="10,5,10,0" />

            <Label Content="Lösenord (minst 6 bokstäver): *" Margin="10,10,0,0" FontSize="12" />
            <PasswordBox x:Name="tbPassword" HorizontalAlignment="Stretch" Margin="10,5,10,0" />

            <CheckBox x:Name="cboxIsAdmin" Content="Är administratör?" Margin="10,15,0,0" />

            <Button x:Name="btnAddUser" Click="btnAddUser_Click" Content="Skapa användare" Margin="10,20,10,10" />
        </StackPanel>

    </Grid>
</Window>
