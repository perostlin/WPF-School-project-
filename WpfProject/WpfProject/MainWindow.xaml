<Window x:Class="WpfProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject"
        mc:Ignorable="d"
        Title="Logga in" Height="152.9" Width="181.564">
    <Grid Margin="0,0,0.2,-20">
        <StackPanel>

            <Label Content="Användarnamn" Margin="5, 0, 0, 0" FontWeight="Light" />
            <TextBox x:Name="tbUsername" Margin="5, 0, 5, 0" HorizontalAlignment="Stretch" />

            <Label Content="Lösenord" Margin="5,0,0,0" FontWeight="Light" />
            <PasswordBox x:Name="tbPassword" Margin="5, 0, 5, 0" HorizontalAlignment="Stretch" />
            
            <Button x:Name="btnLogin" Margin="5, 10, 5, 0" HorizontalAlignment="Stretch" Click="btnLogin_Click" Content="Logga in" />
            
        </StackPanel>
    </Grid>
</Window>
